{% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6">

                <div class="list-group list-group-flush">

                    <div class="list-group-item shadow-sm border-0 rounded mb-3 ">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-3">
                                <img src="{{ asset('images/kerrial.jpg') }}" class="img-fluid rounded-circle my-2">
                            </div>
                            <div class="col-9">
                                <div class="fs-5 fw-light text-center">Fullstack Developer | Mentor | Author
                                </div>
                            </div>
                        </div>
                    </div>

                    <a href="{{ path('contact') }}" class="link-dark text-center lead my-3">Need a fullstack PHP or Javascript contractor? Hire me now</a>

                    <div class="my-3">Recent posts</div>

                    {% for article in articles %}
                        <a href="{{ path('article', {slug: article.slug}) }}"
                           class="list-group-item border-0 rounded list-group-item-action mb-3">
                            <div class="fs-5">{{ article.title }}</div>
                            <div class="small text-muted">{{ article.content|slice(0,250)|striptags }}</div>
                            <div class="text-end text-muted small">{{ article.createdAt.diffForHumans }}</div>
                        </a>
                    {% endfor %}
                </div>

                <div class="text-center my-5">
                    <a class="link-dark" href="{{ path('articles') }}">more</a>
                </div>


                <div class="mb-5" hx-trigger="revealed" hx-get="{{ path('mailing_list_form') }}" hx-swap-oob="true">
                    <div class="htmx-indicator my-4 d-flex justify-content-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>


    <div class="text-bg-dark opacity-75">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-6">
                    <figure class="text-center my-5">
                        <blockquote class="blockquote">
                            <p class="lead">{{ quote.quote }}</p>
                        </blockquote>
                        <figcaption class="mt-2 blockquote-footer">
                            <cite title="Source Title">{{ quote.author }}</cite>
                        </figcaption>
                    </figure>

                </div>
            </div>
        </div>
    </div>

{% endblock %}