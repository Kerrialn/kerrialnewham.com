{% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6">

                <div class="list-group list-group-flush">

                    <div class="list-group-item shadow-sm border-0 mb-3 ">
                        <div class="row justify-content-between align-items-center">
                               <div class="col-3">
                                   <img src="{{ asset('images/kerrial.jpg') }}" class="img-fluid rounded-circle my-2">
                               </div>
                               <div class="col-9">
                                   <div class="fs-5 fw-light text-center">PHP Fullstack Consultant | Presenter | Teacher  </div>
                               </div>
                        </div>
                    </div>

                    <div class="my-3">Recent posts</div>

                    {% for article in articles %}
                        <a href="{{ path('article', {id: article.id}) }}" class="list-group-item border-0 list-group-item-action mb-3">
                            <div class="fs-5">{{ article.title }}</div>
                            <div class="small text-muted">{{ article.content|slice(0,250)|striptags }}</div>

                        </a>
                    {% endfor %}
                </div>

                <div class="text-center my-5">
                    <a class="link-dark" href="{{ path('articles') }}">more</a>
                </div>


            </div>
        </div>
    </div>
{% endblock %}