    {% endblock %}
</head>
<body>
<div data-controller="scroll-progress" class="h-2 bg-grey position-fixed top-0 z-3"></div>

{% for message in app.flashes('message') %}
    <div class="text-bg-dark py-3 text-center" role="alert">
        {{ message }}
